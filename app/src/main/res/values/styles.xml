<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.NoActionBar_StatusBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.Clickable" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="AppTheme.ClickableBorderless" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.ClickableActionBar" parent="AppTheme">
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?android:attr/actionBarItemBackground</item>
    </style>

    <style name="AppTheme.BlueAccent">
        <item name="colorAccent">@color/md_indigo_800</item>
    </style>

    <style name="AppTheme.White">
        <item name="colorAccent">@color/md_white_1000</item>
    </style>



    <style name="MyTextStylePrimaryNano" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/text_size_Nano</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColorHint">@color/secondaryText</item>
    </style>

    <style name="MyTextStyleSecondaryNano" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryTextWhite</item>
        <item name="android:textSize">@dimen/text_size_Nano</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColorHint">@color/secondaryTextWhite</item>
    </style>

    <style name="MyTextStylePrimaryMicro" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textSize">@dimen/text_size_Micro</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColorHint">@color/secondaryText</item>
    </style>

    <style name="MyTextStyleSecondaryMicro" parent="android:Widget.TextView">
        <item name="android:textColor">@color/primaryTextWhite</item>
        <item name="android:textSize">@dimen/text_size_Micro</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="android:textColorHint">@color/secondaryTextWhite</item>
    </style>

    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/md_white_1000</item>
    </style>

    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/md_white_1000</item>
    </style>

</resources>
